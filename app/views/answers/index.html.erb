<h1>Listing answers for <%= link_to @question.body, @question %></h1>

<table>
  <tr>
    <th>Body</th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%=h answer.body %></td>
    <td><%= link_to 'Show', question_answer_path(answer.question, answer) %></td>
    <td><%= link_to 'Edit', edit_question_answer_path(answer.question, answer) %></td>
    <td><%= link_to 'Destroy', question_answer_path(answer.question, answer), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New answer', new_question_answer_path(@question) %>